<Window x:Class="ElectronicOfferSystem.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        xmlns:prism="http://prismlibrary.com/"
        xmlns:local="clr-namespace:ElectronicOfferSystem"
        prism:ViewModelLocator.AutoWireViewModel="True"
        mc:Ignorable="d"
        Title="MainWindow" 
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="NoResize"
        Height="800" Width="1100">
    <Grid>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <RowDefinition Height="50" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <!-- Top -->
        <Grid Grid.Row="0">
            <ContentControl prism:RegionManager.RegionName="WindowTopRegion"
                            MouseLeftButtonDown="NavBar_MouseLeftButtonDown"/>
            
        </Grid>
        <!-- Top End -->

        <!-- Tab -->
        <Grid Grid.Row="1">
            <materialDesign:ColorZone Mode="PrimaryMid"
                                      MouseLeftButtonDown="NavBar_MouseLeftButtonDown"
                                      materialDesign:ShadowAssist.ShadowDepth="Depth2"
                                      materialDesign:ShadowAssist.ShadowEdges="Bottom">
                <StackPanel Orientation="Horizontal" Margin="2">
                    <RadioButton Style="{StaticResource MaterialDesignTabRadioButton}"
                                 Command="{Binding ChangeProjectCommand}"
                                 CommandParameter=""
                                 Margin="4"
                                 IsChecked="True"
                                 Cursor="Hand"
                                 Content="楼盘项目" />
                    <RadioButton Style="{StaticResource MaterialDesignTabRadioButton}"
                                 Margin="4"
                                 IsChecked="False"
                                 Cursor="Hand"
                                 Content="登记业务项目" />
                    <RadioButton Style="{StaticResource MaterialDesignTabRadioButton}"
                                 Margin="4"
                                 IsChecked="False"
                                 Cursor="Hand"
                                 Content="设置" />
                </StackPanel>
            </materialDesign:ColorZone>
        </Grid>
        <!-- Tab End -->

       

        <!-- Main -->
        <Grid Grid.Row="2">
            <Frame Source="RealEstate/RealEstatePage.xaml"></Frame>
        </Grid>
        <!-- Main End -->

    </Grid>


</Window>
